
{% extends "index.html.twig" %}

{% block section %}
<form method="post" action="index.php" class="well">
   <fieldset class="form-group">
    <legend>Ajouter un nouveau jeu</legend>
    <div class="form-group row">
        <label for="idcategorie" class="col-sm-2 control-label">Choix de la catégorie</label>
        <div class="col-sm-10">
            <select class="custom-select" name="idcategorie" title="Choisir une des catégories suivantes..." required>
                {% for cat in categories %}
                <option value="{{ cat.idcategorie }}"{% if option.selected %} selected{% endif %}>{{ cat.outils }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="theme" class="col-sm-2 control-label">Thème du jeu</label>
        <div class="col-sm-10">
            <input type="text" id="theme" name ="theme" placeholder="Le thème du jeu..." class="form-control" autofocus required>
        </div>
    </div>
    <div class="form-group row">
        <label for="nomjeu" class="col-sm-2 control-label">Nom du jeu</label>
        <div class="col-sm-10">
            <input type="text" id="nomjeu" name ="nomjeu" placeholder="Le nom du jeu..." class="form-control" autofocus required>
        </div>
    </div>
    <div class="form-group row">
        <label for="auteur" class="col-sm-2 control-label">Auteur</label>
        <div class="col-sm-10">
            <input type="text" id="auteur" name ="auteur" placeholder="Auteur du jeu..." class="form-control" autofocus required>
        </div>
    </div>
    <div class="form-group row">
        <label for="editeur" class="col-sm-2 control-label">Editeur</label>
        <div class="col-sm-10">
            <input type="text" id="editeur" name ="editeur" placeholder="Editeur du jeu..." class="form-control" autofocus required>
        </div>
    </div>
    <div class="form-group row">
        <label for="illustrateur" class="col-sm-2 control-label">Illustrateur</label>
        <div class="col-sm-10">
            <input type="text" id="illustrateur" name ="illustrateur" placeholder="Illustrateur du jeu..." class="form-control" autofocus required>
        </div>
    </div>
    <div class="form-group row">
        <label for="nbjoueursmin" class="col-md-2 control-label">Entre... </label>
        <div class="col-md-3">
            <input type="number" id="nbjoueursmin" name ="nbjoueursmin" placeholder="Minimum" class="form-control" autofocus required>
        </div>
        <label for="nbjoueursmax" class="col-md-1 control-label">... et ...</label>
        <div class="col-md-3">
            <input type="number" id="nbjoueursmax" name ="nbjoueursmax" placeholder="Maximum" class="form-control" autofocus required>
        </div>
        <div class="col-md-3">
            ... joueurs.
        </div>
    </div>
    <div class="form-group row">
        <label for="categorieage" class="col-sm-2 control-label">Âge conseillé</label>
        <div class="col-sm-10">
            <input type="text" id="categorieage" name ="categorieage" placeholder="Catégorie d'âge conseillée..." class="form-control" autofocus required>
        </div>
    </div>
    <div class="form-group row">
        <label for="materiel" class="col-sm-2 control-label">Matériel</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="3" placeholder="Matériel utilisé pour jouer... "name="materiel" id="materiel" autofocus required></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label for="dureepartie" class="col-sm-2 control-label">Durée</label>
        <div class="col-sm-10">
            <input type="text" id="dureepartie" name ="dureepartie" placeholder="Durée d'une partie moyenne..." class="form-control" autofocus required>
        </div>
    </div>
    <div class="form-group row">
        <label for="description" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="6" placeholder="Description et règles du jeu..." name="description" id="description" autofocus required></textarea>
        </div>
    </div>
    <div class="form-group row">
    <input  type="hidden" id="iduser" name="iduser" value="{{ iduser }}"/> 
    <input  type="hidden" id="dateajout" name="dateajout" value="{{ "now"|date("Y-m-d") }}"/>
    <input  type="hidden" id="ajout" name="ajout" value="1"/>
    <input  type="hidden" id="modif" name="modif" value="0"/>
    <input  type="hidden" id="suppr" name="suppr" value="0"/>
    <div class="col-sm-6"><input type="submit" class="btn btn-primary btn-block" name="valider_ajout" value="Ajouter"/></div>
    <div class="col-sm-6"><button type="reset" class="btn btn-default btn-block">Annuler</button></div>
   </fieldset>
</form>
{% endblock %}